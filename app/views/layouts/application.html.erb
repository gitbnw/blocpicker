<!DOCTYPE html>
<html>
<head>
  <title>Blocpicker</title>
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <%= stylesheet_link_tag    "application", media: "all" %>
   <%= javascript_include_tag "application" %>
   <%= csrf_meta_tags %>
</head>
<body>
   <div class="container">
        <div class="navbar" role="navigation">
        <ul class="nav navbar-nav">

          <% if user_signed_in? %>

          <li><%= link_to current_user.name, current_user, :class => 'navbar-brand' %></li>

          <li><%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => "btn btn-default" %></li>
          <% else %>
            <%= link_to "Register".html_safe, new_registration_path(:user), class: "btn btn-default" %>
              <%- resource_class.omniauth_providers.each do |provider| %>

                <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-default" do %>

                  <% content_tag(:i, nil, class: "fa fa-2x #{omniauth_icon_for(provider)}") %>
                <% end %>
              <% end -%>
          <% end %>
        </ul>
        </div>
     <div class="flash">
         
     <% if flash.now[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash.now[:notice] %>
       </div>
     <% elsif flash.now[:alert] %>
       <div class="alert alert-danger">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash.now[:alert] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>
  <% if flash[:notice] %>
    <p id="flash_notice" class="messages notice"><%= flash[:notice] %></p>
    <%= javascript_tag "$('#flash_notice').effect('highlight',{},1000);" %>
  <% end %>

  <%# if flash[:error] || flash[:errors] %>
    <!--<p id="flash_errors" class="messages errors">-->
        <%#= flash[:error] || flash[:errors] %>
    <!--</p>-->
    <%#= javascript_tag "$('#flash_errors').effect('highlight',{},1000);" %>
  <%# end %>

  <%# flash[:error] = flash[:errors] = flash[:notice] = nil %>
  
     </div>
    <%= yield %>
</body>

</html>
