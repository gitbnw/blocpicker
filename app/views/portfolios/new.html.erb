
<h1>New Portfolio</h1>
<div class="row">
  <div class="col-md-4">

  </div>
  <div class="col-md-3">
    <%= form_for @portfolio do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter portfolio name" %>
      </div>
        <div class="form-group">
         <%= render partial: 'stocks/form', locals: { f: f, stock: @portfolio.stocks } %>
       </div>     
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
