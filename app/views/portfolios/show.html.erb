<h1><%= @portfolio.name %></h1>

<div class="row">
  <div class="col-md-8">
    <%= render @portfolio.stocks %>

  </div>

  <div class="col-md-4">

    <%= link_to "Edit", edit_portfolio_path(@portfolio), class: 'btn btn-success' %>
    <%= link_to "Delete Portfolio", @portfolio, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this portfolio?'} %>
  </div>
</div>
