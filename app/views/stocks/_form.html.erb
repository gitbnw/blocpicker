<div>
  <%= form_for [portfolio, stock], :class => 'stock-create-ajax', remote: true do |f| %>
    <div class="form-inline">
    <div class="form-group">      
    <%= f.text_field :symbol,
                     class: 'form-control inline',
                     placeholder: "Symbol",
                     value: "" %>
  <%= button_tag( :class => "btn btn-default inline") do %>
    <span class="glyphicon-plus text-success"></span>
  <% end %>
  <%= link_to "Delete Portfolio", @portfolio, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this portfolio?'} %>
    <% end %>
</div>

  </div>