<% @stocks.each do |stock| %>

    var tick_color
    var canvas = $('#canvas-<%= stock.id %>')[0]
    
    <% if stock.tick == 'up' %>
        tick_color = 'green'
    <% elsif stock.tick == 'down' %>
        tick_color = 'red'
    <% else %>
        tick_color = 'gray'
    <% end %>

    $stock = $("<%= j render(stock) %>");
    
    copy(tick_color, canvas)
    
    $('#stock-<%= stock.id %> .stock_dynamic ').hide().find('.stock-text').html($stock).promise().done(function() {
         $('#stock-<%= stock.id %> .stock_dynamic').fadeIn("slow")
         <!--hide and show only the dynamic parts-->
     })  

  <% end %>
  
